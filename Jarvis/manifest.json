{
    "manifest_version": 3,
    "name": "Jarvis - AI Browser Assistant",
    "version": "1.0.0",
    "description": "A privacy-first, voice-activated browser assistant.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs",
        "sidePanel"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_title": "Open Jarvis"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+J",
                "mac": "Command+Shift+J"
            },
            "description": "Open Jarvis Side Panel"
        }
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}